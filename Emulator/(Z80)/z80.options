// -----	Optional inclusion of Z80_Info(cc,ip) in several special instructions --------------------//		Doesn't slow down the engine very much, if Z80_Info() does nothing//		May slow down the engine to a crawl, if Z80_Info() does time consuming jobs like printing//		Actually depending on flags Z80_Info() prints a line on the console disassembling the instruction#define	INFO_ILLEGALS	false	// include Z80_Info(cc,ip) in normal illegal instructions ?#define	INFO_WEIRD		false	// include Z80_Info(cc,ip) in weird illegal instructions ?#define	INFO_IRPT			false	// include Z80_Info_Irpt(cc) in interrupt processing ?#define	INFO_NMI			false	// include Z80_Info_NMI(cc) in nmi processing ?#define	INFO_MISC			true	// include Z80_Info(cc,ip) in miscellaneous instruction ?							// >>>   EI;  DI;  IM0;  IM1;  IM2;  RETI;  RETN;  HALT;  DAA; 							// >>>   LD A,R;  LD A,I;  LD R,A;  LD I,A;  RST 0 - RST 56// -----	Optional inclusion of additional code to profile Z80 applications --------------------#define	CMD_PROFILE		false	// create opcode profiles#define	PC_PROFILE		false	// create address profile// -----	Optional exact calculation of R-register ----------------------------------------#define	EXACT_R				false	// slows down emulation ! 